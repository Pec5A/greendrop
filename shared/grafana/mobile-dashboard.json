{
  "__inputs": [
    {
      "name": "DS_LOKI",
      "label": "Loki",
      "description": "Grafana Cloud Loki data source",
      "type": "datasource",
      "pluginId": "loki",
      "pluginName": "Loki"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "loki", "name": "Loki", "version": "1.0.0" }
  ],
  "id": null,
  "uid": "greendrop-mobile",
  "title": "GreenDrop — Mobile",
  "description": "Monitoring de l'application mobile iOS GreenDrop",
  "tags": ["greendrop", "mobile", "ios"],
  "timezone": "Europe/Paris",
  "refresh": "5m",
  "time": { "from": "now-24h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "App Launches (24h)",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "count_over_time({app=\"greendrop-mobile\"} | json | event=\"app_launch\" [24h])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "green" }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 2,
      "title": "Sessions Actives",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "count(sum by (sessionId) (count_over_time({app=\"greendrop-mobile\"} | json | __error__=`` [$__auto])))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "blue" }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 3,
      "title": "Taux d'Erreurs (%)",
      "type": "gauge",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"greendrop-mobile\"} | json | level=\"error\" [24h])) / sum(count_over_time({app=\"greendrop-mobile\"} | json [24h])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 10,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 4,
      "title": "Commandes Mobile",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "count_over_time({app=\"greendrop-mobile\"} | json | event=\"order_placed\" [24h])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "orange" }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 5,
      "title": "Top Écrans",
      "type": "barchart",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum by (screen) (count_over_time({app=\"greendrop-mobile\"} | json | event=\"screen_view\" [$__auto]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 6,
      "title": "Latence API p50/p95",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "quantile_over_time(0.5, {app=\"greendrop-mobile\"} | json | event=\"api_call\" | unwrap durationMs [$__auto]) by ()",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "quantile_over_time(0.95, {app=\"greendrop-mobile\"} | json | event=\"api_call\" | unwrap durationMs [$__auto]) by ()",
          "legendFormat": "p95",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": { "fillOpacity": 15 }
        }
      }
    },
    {
      "id": 7,
      "title": "Erreurs API",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"greendrop-mobile\"} | json | event=\"api_call\" | statusCode >= 400 [$__auto]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "red" },
          "custom": { "fillOpacity": 20 }
        }
      }
    },
    {
      "id": 8,
      "title": "Sessions par Version",
      "type": "piechart",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "sum by (appVersion) (count_over_time({app=\"greendrop-mobile\"} | json | event=\"app_launch\" [$__auto]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 9,
      "title": "Live Logs",
      "type": "logs",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "{app=\"greendrop-mobile\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "sortOrder": "Descending",
        "enableLogDetails": true,
        "wrapLogMessage": true
      }
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] },
  "schemaVersion": 39
}
