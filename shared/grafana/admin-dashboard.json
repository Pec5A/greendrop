{
  "__inputs": [
    {
      "name": "DS_LOKI",
      "label": "Loki",
      "description": "Grafana Cloud Loki data source",
      "type": "datasource",
      "pluginId": "loki",
      "pluginName": "Loki"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "loki", "name": "Loki", "version": "1.0.0" }
  ],
  "id": null,
  "uid": "greendrop-admin",
  "title": "GreenDrop — Admin Performance",
  "description": "Monitoring du panneau d'administration GreenDrop",
  "tags": ["greendrop", "admin", "performance"],
  "timezone": "Europe/Paris",
  "refresh": "5m",
  "time": { "from": "now-24h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "Page Views",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"greendrop-admin\"} | json | __error__=`` | type=`page_view` [$__auto]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "green" },
          "custom": { "fillOpacity": 20 }
        }
      }
    },
    {
      "id": 2,
      "title": "Sessions Uniques",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "count(sum by (sessionId) (count_over_time({app=\"greendrop-admin\"} | json | __error__=`` | type=`page_view` [$__auto])))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "purple" }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 3,
      "title": "Admins Actifs (15min)",
      "type": "stat",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "count(sum by (sessionId) (count_over_time({app=\"greendrop-admin\"} | json | __error__=`` [15m])))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "blue" }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 4,
      "title": "Temps Réponse API p50/p95/p99",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "quantile_over_time(0.5, {app=\"greendrop-admin\"} | json | __error__=`` | duration > 0 | unwrap duration [$__auto]) by ()",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "quantile_over_time(0.95, {app=\"greendrop-admin\"} | json | __error__=`` | duration > 0 | unwrap duration [$__auto]) by ()",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "quantile_over_time(0.99, {app=\"greendrop-admin\"} | json | __error__=`` | duration > 0 | unwrap duration [$__auto]) by ()",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": { "fillOpacity": 10 }
        }
      }
    },
    {
      "id": 5,
      "title": "Taux Erreurs API (%)",
      "type": "gauge",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"greendrop-admin\"} | json | __error__=`` | status >= 500 [5m])) / sum(count_over_time({app=\"greendrop-admin\"} | json | __error__=`` | status > 0 [5m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 6,
      "title": "Volume Requêtes",
      "type": "timeseries",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 4 },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"greendrop-admin\"} | json | __error__=`` | method != `` [$__auto]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "blue" },
          "custom": { "fillOpacity": 20 }
        }
      }
    },
    {
      "id": 7,
      "title": "Top Pages",
      "type": "barchart",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum by (path) (count_over_time({app=\"greendrop-admin\"} | json | __error__=`` | type=`page_view` [$__auto]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 8,
      "title": "Endpoints les Plus Lents",
      "type": "table",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "avg by (path) (avg_over_time({app=\"greendrop-admin\"} | json | __error__=`` | duration > 0 | unwrap duration [$__auto]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      }
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] },
  "schemaVersion": 39
}
